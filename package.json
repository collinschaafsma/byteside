{
	"name": "byteside",
	"version": "0.0.1",
	"description": "Animated avatar companion for AI coding agents",
	"type": "module",
	"scripts": {
		"dev": "nitro dev --port 3333",
		"dev:cli": "bun run src/cli.ts",
		"build": "nitro build && bun build src/cli.ts --outfile dist/cli.mjs --target node",
		"preview": "nitro preview",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest",
		"test:run": "vitest run"
	},
	"bin": {
		"byteside": "./dist/cli.mjs"
	},
	"files": [
		"dist",
		"avatars"
	],
	"keywords": [
		"ai",
		"avatar",
		"claude",
		"coding-assistant",
		"terminal"
	],
	"author": "Collin",
	"license": "MIT",
	"dependencies": {
		"@opentui/core": "^0.1.74",
		"commander": "^14.0.2",
		"nitro": "^3.0.1-alpha.1",
		"open": "^11.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@vitest/coverage-v8": "^4.0.17",
		"rolldown": "^1.0.0-beta.60",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	}
}
