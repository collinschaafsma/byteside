{
	"name": "byteside",
	"version": "0.3.1",
	"description": "Animated avatar companion for AI coding agents",
	"type": "module",
	"scripts": {
		"dev": "nitro dev --port 3333",
		"dev:cli": "bun run src/cli.ts",
		"build": "nitro build && bun build src/cli.ts --outfile dist/cli.mjs --target node --packages=external",
		"preview": "nitro preview",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest",
		"test:run": "vitest run",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "npm publish",
		"prepublishOnly": "bun run build && bun run test:run"
	},
	"bin": {
		"byteside": "./dist/cli.mjs"
	},
	"files": [
		"dist",
		".output"
	],
	"keywords": [
		"ai",
		"avatar",
		"claude",
		"coding-assistant",
		"terminal"
	],
	"author": "Collin",
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/collinschaafsma/byteside.git"
	},
	"homepage": "https://github.com/collinschaafsma/byteside#readme",
	"bugs": {
		"url": "https://github.com/collinschaafsma/byteside/issues"
	},
	"dependencies": {
		"c12": "^3.3.3",
		"commander": "^14.0.2",
		"nitro": "^3.0.1-alpha.1",
		"open": "^11.0.0",
		"picocolors": "^1.1.1",
		"terminal-image": "^4.0.0",
		"ws": "^8.19.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@changesets/cli": "^2.29.8",
		"@types/ws": "^8.18.1",
		"@vitest/coverage-v8": "^4.0.17",
		"rolldown": "^1.0.0-beta.60",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	}
}
